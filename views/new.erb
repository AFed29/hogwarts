<h2>Add a new student</h2>
<form method="post" action="/students">
  <label for="first-name">First name: </label>
  <input id="first-name" type="text" name="first_name" placeholder="Enter a first name">

  <label for="last-name">Last name: </label>
  <input id="last-name" type="text" name="last_name" placeholder="Enter a last name">

  <label for="house-id">House: </label>
  <select id="house-id" name="house_id">
    <% @houses.each do |house| %>
      <option value="<%= house.id %>"><%= house.name %></option>
    <% end %>
  </select>

  <label for="age">Age: </label>
  <input id="age" type="number" min="11" max="19" name="age">

  <input type="submit" value="Add a student">
</form>
